@model PeopleViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">People start here!</h1>
</div>

<br />

<form class="text-center" asp-action="Index" asp-controller="People" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Phone"></label>
    <input asp-for="Phone" />
    <span asp-validation-for="Phone"></span>

    <label asp-for="City"></label>
    <input asp-for="City" />
    <span asp-validation-for="City"></span>
    <button>Add</button>
</form>


<hr />


<form asp-action="Filter" asp-controller="People">
    <label asp-for="Search"></label>
    <input asp-for="Search" />
    <input type="submit" value="Filter by Name or City" />
</form>

<hr />


<div>  <h2> People list moved here. Enjoy! </h2> </div>

<partial name="_PeopleTable" model="Model" />
