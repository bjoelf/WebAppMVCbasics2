@model ManageLanguageViewModel
@{
    ViewData["Title"] = "Language Management";
}

<h1>Languages management!</h1>

<div class="row">
    <div class="col-6">
        <h4>Current</h4>
    </div>
    <div class="col-6">
        <h4>Avalible</h4>
    </div>

</div>
<div class="row">
    <div class="col-6">
        <ul>
            @foreach (var item in Model.Person.PersonLanguage)
            {
                <li>@item.Language.Name</li>
                @Html.ActionLink("Remove", "PersonLanguageRemove", "People", new { personId = Model.Person.Id, languageId = item.LanguageId })
            }
        </ul>
    </div>
    <div class="col-6">
        <ul>
            @foreach (var item in Model.Languages)
            {
                <li>
                    @item.Name @Html.ActionLink("Add", "PersonLanguageAdd", "People", new { personId = Model.Person.Id, languageId = item.Id })
                </li>
            }
        </ul>
    </div>

</div>

